<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

  <TextView
      android:id="@+id/fstTxt"
      android:layout_width="wrap_content"
      android:layout_height="32dp"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="8dp"
      android:text="UserName"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/txtName"
      app:layout_constraintHorizontal_bias="0.543"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.129" />

  <EditText
      android:id="@+id/txtName"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="53dp"
      android:layout_marginEnd="67dp"
      android:layout_marginStart="29dp"
      android:layout_marginTop="83dp"
      android:cursorVisible="false"
      android:ems="10"
      android:fadingEdge="horizontal"
      android:hapticFeedbackEnabled="true"
      android:selectAllOnFocus="false"
      app:layout_constraintBottom_toTopOf="@+id/txtPwd"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/fstTxt"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="1.0" />

  <TextView
      android:id="@+id/secTxt"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="347dp"
      android:layout_marginEnd="32dp"
      android:layout_marginStart="33dp"
      android:layout_marginTop="75dp"
      android:text="Password"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/txtPwd"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/fstTxt" />

  <EditText
      android:id="@+id/txtPwd"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="54dp"
      android:layout_marginEnd="42dp"
      android:layout_marginStart="32dp"
      android:layout_marginTop="53dp"
      android:ems="10"
      android:inputType="textPassword"
      app:layout_constraintBottom_toTopOf="@+id/btnLogin"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toEndOf="@+id/secTxt"
      app:layout_constraintTop_toBottomOf="@+id/txtName" />

  <Button
      android:id="@+id/btnLogin"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="237dp"
      android:layout_marginEnd="139dp"
      android:layout_marginStart="157dp"
      android:layout_marginTop="36dp"
      android:text="Login"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.0"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toBottomOf="@+id/txtPwd" />

  <Button
      android:id="@+id/button"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:layout_marginEnd="8dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="8dp"
      android:onClick="registerAsUser"
      android:text="Register as User "
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintHorizontal_bias="0.101"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.783"
      tools:ignore="MissingConstraints" />

  <Button
      android:id="@+id/button3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="117dp"
      android:layout_marginEnd="31dp"
      android:layout_marginStart="7dp"
      android:layout_marginTop="50dp"
      android:onClick="registerAsOwner"
      android:text="Register as owner"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@+id/button"
      app:layout_constraintTop_toBottomOf="@+id/btnLogin"
      tools:ignore="MissingConstraints" />


</android.support.constraint.ConstraintLayout>